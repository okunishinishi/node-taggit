#!/usr/bin/env node

/**
 * Command line interface of taggit.
 */

"use strict";

var program = require('commander'),
    pkg = require('../package'),
    taggit = require('../lib');

program
    .version(pkg['version'])
    .description(pkg['description'])
    .option('-t, --tag <tag>', "Name of tag. By default, name is resolved form package.json.");


program.parse(process.argv);

//=========================
// Run main command
//=========================

taggit({
    tag: program.tag
}, _done);

/** When command done. */
function _done(err) {
    if (err) {
        console.error(err);
        process.exit(1);
    } else {
        process.exit(0);
    }
}

program.parse(process.argv);
